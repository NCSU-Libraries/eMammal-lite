<p id="notice"><%= notice %></p>

<h1>Listing Photos</h1>

<table>
  <thead>
    <tr>
      <th>Animal</th>
      <th>Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.animal %></td>
        <td><%= photo.source %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <% @photos.each do |photo| %>
    <div class="col-md-2">
      <%= image_tag(photo.source, alt: "eMammal Lite", class: "center-img-resposive") %>
    </div>
  <% end %>
</div>
<br>

<%= link_to 'New Photo', new_photo_path %>

<header class="header landing-header will-blur will-blur-photo flex-row-center">
  <div class="desktop-header">
    <div class="logo-left">
      <%= image_tag("landing/desktop_heading_logo_white", alt: "eMammal Lite logo", class: "center-img-resposive") %>
      <h1 class="lg-text logo-text">eMammal Lite</h1>
      <div class="logo-border-right"></div>
    </div>
    <div class="main-links">
      <%= link_to "IDENTIFY", new_user_session_path, class: "xl-text link" %>
      <%= link_to "STATS", new_user_session_path, class: "xl-text link" %>
      <%= link_to "PHOTO ARCHIVE", new_user_session_path, class: "xl-text link" %>
    </div>
  </div>
</header>

<div class="landing flex-column-center">
  <div class="dog-ear flex-column-center">
    <h1 class="light-text dog-ear-text">LITE</h1>
  </div>
  <div class="emammal-logo">
    <%= image_tag("landing/Large_eMammal_Logo.png", alt: "eMammal Lite", class: "center-img-resposive logo-mobile") %>
    <%= image_tag("landing/eMammal_logo_white.png", alt: "eMammal Lite", class: "center-img-resposive logo-desktop") %>
    <h1 class="lg-text logo-text">See Wildlife, Do Science</h1>
  </div>
  <div class="lib-logo">
    <%= image_tag("landing/libraries-logo-red.png", alt: "eMammal Lite", class: "center-img-resposive") %>
  </div>
  <div class="down-arrow flash">
    <svg id="Layer_1" x="0px" y="0px"
    	 viewbox="-2819 -2332.2 655.7 358.2" enable-background="new -2819 -2332.2 655.7 358.2" xml:space="preserve">
    <g id="group-33" transform="translate(-2963 -3163)">
      <path id="path-1"  opacity="0.64" fill="none" stroke="#4156A1" stroke-width="50" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="
    		M169,855.8l302.8,155.7l302.8-155.7"/>
      <path id="path-1-2" opacity="0.64" fill="none" stroke="#4156A1" stroke-width="50" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="
    		M169,1008.3L471.8,1164l302.8-155.7"/>
    </g>
    </svg>
  </div>
  <div class="up-arrow flash">
    <svg x="0px" y="0px"
    	 viewbox="-2819 -2332.2 655.7 358.2" enable-background="new -2819 -2332.2 655.7 358.2" xml:space="preserve">
    <g transform="translate(-2963 -3163)">
      <path opacity="0.64" fill="none" stroke="#4156A1" stroke-width="50" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="
    		M169,855.8l302.8,155.7l302.8-155.7"/>
      <path opacity="0.64" fill="none" stroke="#4156A1" stroke-width="50" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="
    		M169,1008.3L471.8,1164l302.8-155.7"/>
    </g>
    </svg>
  </div>
</div>

<div id="landing-about" class="about flex-column-center">
  <div class="about-container">
    <div class="about-title">
        <h1 class="xl-header bold-text">About</h1>
    </div>

    <div class="about-body">
      <p class="body-text">
        <strong>eMammal Lite</strong> contains over 5,000 photos of wildlife from research projects around the world taken with a <strong>camera trap</strong>, a remotly activated camera. Since no one was around when the photo was taken, <strong>researchers need your help identifying what activated the camera</strong>.
      </p>
      <p class="body-text">
        <strong>Do you know your wildlife?</strong>
      </p>
    </div>
  </div>

  <%= link_to "Begin", new_user_session_path, role: "button", class: "emammal-btn light-btn bold-text xl-text begin-btn" %>
</div>

<!-- Simple script to scroll to about info on button click  -->
<script type="text/javascript">
  $(".down-arrow").click(function() {
    $('html,body').animate({
        scrollTop: $("#landing-about").offset().top},
        'slow');
  });

  $(".up-arrow").click(function() {
    $('.about').addClass("bring-to-top")
    $('.desktop-header').addClass("with-about")
    $(".dog-ear").addClass("hidden")
  });
</script>

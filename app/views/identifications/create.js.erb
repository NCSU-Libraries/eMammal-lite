// Only run if the user did not skip the photo
console.log(<%= !@identification.user_identification.nil? %>);
if (<%= !@identification.user_identification.nil? %>) {

  $(".card").toggleClass("flipped");
  $(".skip-container").toggleClass("hidden");

  // Render the back of the card with the correct display (i.e., right or wrong)
  $("#back_of_card").html("<%= escape_javascript(render('identifications/back_of_card')) %>");

  // If the correct id was made increase score by 10 and set flip animation
  if (<%= @identification.correct_identification %>) {

    $(".score").text(parseInt($(".score").text()) + 10)

    window.setTimeout(function() {
      $(".card").toggleClass("flipped");
      $(".next-arrow").toggleClass("visible");
      $("#photo_content").html("<%= escape_javascript(render('identifications/photo_content')) %>");
    }, 1500)

  } else {
    $(".next-arrow").toggleClass("visible");
  }
}

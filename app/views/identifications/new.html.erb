<% provide(:header_text, "IDENTIFY")%>
<% provide(:icon, "icons/Identify-icon@3x.png")%>
<%= render 'layouts/header' %>
<div class="id-page page-with-header flex-column-center will-blur">
  <div class="card-container flex-row-center">
    <div class="card">
      <div class="front">
        <div id="photo" class="id-card-img">
          <%= render 'photo' %>
        </div>
        <div id="photo_content" class="id-card-choice-container will-blur-photo">
          <%= render 'photo_content'%>
        </div>
        <div class="skip-container will-blur-photo">
          <%= link_to new_identification_path, class:"xs-text skip-text", remote: true do %>
          skip >
          <% end %>
        </div>
      </div>
      <div id="back_of_card" class="back">
        <%= render 'back_of_card' %>
      </div>
    </div>
    <%= link_to new_identification_path, class:"next-arrow", remote: true do %>
      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
      	 viewbox="5 -430 300 840" xml:space="preserve">
      <path id="path-1" opacity="0.64" fill="none" stroke="#4156A1" stroke-width="50" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" d="
      	M34.2,371L281-18.2L34.2-407.5"/>
      </svg>
    <% end %>
  </div>
  <div class="score-container flex-column-center will-blur-photo">
    <h1 class="lg-text">SCORE: <span class="score">0</span></h1>
  </div>
</div>

<%= render 'shared/prevent_click'%>
<%= render 'shared/menu'%>

<% provide(:info_text, "Can you make out the animals in these pictures? Let’s find out. Below you will see a Card containing a camera trap image. Choose from the choices provided to test your skills and contribute to the database of identifications. The more IDs you make, the higher your score will grow. If you get one wrong, don't worry, we’ll store it and bring it back around for you to try again later. Go ahead give it a try!")%>
<%= render 'shared/info_drop_down' %>

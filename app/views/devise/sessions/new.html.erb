<% provide(:header_text, "LOG IN")%>
<%= render 'layouts/header' %>
  <%= devise_error_messages! %>
  <div class="login-page page-with-header flex-column-center will-blur">
    <%= image_tag "login/Login_wolf-logo@3x.png", class:"center-img-resposive login-logo" %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex-column-center login-form-container"}) do |f| %>
      <%= f.email_field :email, autofocus: true, class:"emammal-text-input login-text-input lg-text", placeholder:"Email" %>
      <%= f.password_field :password, autocomplete: "off", class:"emammal-text-input login-text-input lg-text", placeholder:"Password" %>
      <% if devise_mapping.rememberable? %>
        <div class="remember-me-check">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"emammal-btn light-btn lg-text"  %>
      </div>
    <% end %>
    <div class="signup-or-guest flex-column-center">
      <%= link_to('Sign up', new_user_registration_path) %>
      <span>or</span>
      <%= link_to('Continue as guest', how_to_path) %>
    </div>
  </div>
<%= render 'shared/prevent_click'%>
<%= render 'shared/menu'%>

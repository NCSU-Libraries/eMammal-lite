<div class="menu">
  <div class="menu-header">
    <div class="small-logo">
      <%= image_tag("small-wolf-logo.svg", alt: "eMammal Lite", class: "center-img-resposive") %>
    </div>
    <div class="menu-title">
      <h1 class="xl-text no-margin-text">eMAMMAL</h1>
    </div>
    <div class="menu-menu-btn">
      <div class="menu-btn flex-column-center">
        <%= image_tag("mobile-menu-btn.svg", alt: "open menu", class: "center-img-resposive") %>
      </div>
    </div>
  </div>
  <div class="menu-user-info flex-row-center">
    <div class="user-icon">
      <%= image_tag("menu/user-default-photo@3x.png", alt: "open menu", class: "center-img-resposive") %>
    </div>
    <div class="user-name">
      <h1 class="body-text bold-text no-margin-text">Anonymous Wolf</h1>
      <h1 class="body-text oblique-text no-margin-text">login coming soon...</h1>
    </div>
  </div>
  <div class="menu-nav-container">
    <div class="menu-nav flex-column-center">
      <% {"IDENTIFY" => identify_path, "LEARN MORE" => learn_more_path,
        "PHOTO ARCHIVE" => photos_path, "STATS" => "#"}.each do |page, path| %>
        <% if yield(:header_text) == page %>
          <h1 class="lg-text bold-text"><%=page%></h1>
        <% else %>
          <h1 class="lg-text"><%= link_to page, path %></h1>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
